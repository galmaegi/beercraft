<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/detail_summary"
    android:layout_weight="2"
    android:layout_width="200dp"
    android:layout_height="fill_parent"
    android:background="@drawable/detail_1"
    android:paddingLeft="15dp"
    >

    <TextView
        android:layout_marginTop="40dp"
        android:id="@+id/sum_beer_name"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="BLUE MOON"/>
    <TextView
        android:id="@+id/sum_beer_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WHITE IPA"/>
    <!-- 맥주의 도수와 용량을 함께 표기-->
    <TextView
        android:id="@+id/sum_beer_abv_vol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5.4%, 355ml"/>
    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/sum_price"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="10,800kor"
        />
    <TextView
        android:id="@+id/sum_range"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+1200 (+12.62%)"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  +Watch List  "/>

    <!-- Today-->
    <TextView
        android:id="@+id/sum_today_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TODAY"/>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/sum_today_high_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="High"/>
        <TextView
            android:id="@+id/sum_today_high"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="10,800"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/sum_today_low_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Low"/>
        <TextView
            android:id="@+id/sum_today_low"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="9,100"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/sum_today_open_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Open"/>
        <TextView
            android:id="@+id/sum_today_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="9,600"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/sum_today_prev_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Prev Cls"/>
        <TextView
            android:id="@+id/sum_today_prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="9,550"/>
    </FrameLayout>

    <!-- Summary-->
    <TextView
        android:id="@+id/sum_summary_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Summary"/>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/sum_summary_high_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="1m High"/>
        <TextView
            android:id="@+id/sum_summary_high"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="10,800"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/sum_summary_low_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="1m Low"/>
        <TextView
            android:id="@+id/sum_summary_low"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="9,100"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/sum_summary_avg_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="1y Avg"/>
        <TextView
            android:id="@+id/sum_summary_avg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="9,600"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/sum_summary_per_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="PER"/>
        <TextView
            android:id="@+id/sum_summary_per"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="9,550"/>
    </FrameLayout>


</LinearLayout>