<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="1194dp"
    android:layout_height="wrap_content"
    android:background="#222222">

    <android.widget.Space
        android:layout_width="12dp"
        android:layout_height="match_parent"
        />

    <TextView
        android:id="@+id/v_alert"
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:background="#05B005"
        />

    <android.widget.Space
        android:layout_width="12dp"
        android:layout_height="match_parent"
        />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="450dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical|left"
        android:textAlignment="gravity"
        android:textSize="18dp"
        android:text="BIG WAVE GOLDEN ALE"/>

    <TextView
        android:id="@+id/tv_code"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical|right"
        android:textAlignment="gravity"
        android:textSize="18dp"
        android:text="8120375"/>


    <TextView
        android:id="@+id/tv_cost_last"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical|right"
        android:textAlignment="gravity"
        android:textSize="18dp"
        android:text="8,200"/>

    <TextView
        android:id="@+id/tv_cost_sale"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical|right"
        android:textAlignment="gravity"
        android:textSize="18dp"
        android:text="8,200"/>

    <TextView
        android:id="@+id/tv_cost_qty"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical|right"
        android:textAlignment="gravity"
        android:textSize="18dp"
        android:text="8,200"/>

    <TextView
        android:id="@+id/tv_order_buy"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical|right"
        android:textAlignment="gravity"
        android:textSize="18dp"
        android:text="8,200"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="120dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_rate"
            android:layout_marginTop="7dp"
            android:layout_width="match_parent"
            android:layout_height="21dp"
            android:textAlignment="textEnd"
            android:textSize="18dp"
            android:text="+2.50%"/>

        <TextView
            android:id="@+id/tv_increase"
            android:layout_width="match_parent"
            android:layout_height="19dp"
            android:textAlignment="textEnd"
            android:textSize="15dp"
            android:text="+200" />
    </LinearLayout>



</LinearLayout>